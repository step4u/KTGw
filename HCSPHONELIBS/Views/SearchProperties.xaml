                    </Custom:DataGrid>-->

                </Grid>
            </TabItem>
            <TabItem Header="기타">
                <Grid Background="#FFF">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,17,0,0" FontSize="14" Text="PBX IP"/>
